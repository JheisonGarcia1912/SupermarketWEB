@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication

@if (User.Identity?.IsAuthenticated ?? false)
{
    <form method="post" class="form-inline" asp-page="/Logout" asp-page-handler="Logout">
        <span class="navbar-text text-dark">Hola @User.Identity?.Name!</span>
        <button type="submit" class="nav-link btn btn-link text-dark">Cerrar Sesión</button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Autenticacion/Login">Iniciar Sesión</a>
        </li>
    </ul>
}
